{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es6",
        "lib": [
            "ES6",
            "DOM"
        ],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true
    },
    "include": [
        "./src/**/*"
    ]
}